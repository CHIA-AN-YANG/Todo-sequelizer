<form class="mt-2 ml-3" action="/todos/{{oldData.id}}?_method=PUT" method="POST">


  <div class="input-group">

    <div class="input-group-prepend">
      <div class="input-group-text" action="">
        <input type="checkbox" name="isDone" {{#if oldData.isDone}}checked{{/if}}>
      </div>      
    </div>  
      <input type="text" class="form-control col-10 col-sm-8 col-md-6 col-lg-4 col-xl-4" name="name" value="{{oldData.name}}">
    <div class="input-group-append">
      <button type="submit" class="btn btn-outline-primary">
        <span>Submit</span>
      </button>
      <a href="/"  class="btn btn-outline-secondary">
        <span>Go Back</span>
      </a>
    </div>  

  </div>

</form>