<div class="row mt-5">
  <div class="col-md-6 card m-auto">
    <div class=" card-body">
      <h1 class="text-center mt-3 mb-4">Register</h1>
      <form action="/users/register" method="POST" spellcheck="false">
      {{>message}}
        <div class="form-group row">
          <label class="col-sm-4 col-form-label" for="name">User Name</label>
          <div class="col-sm-8">
            <input type="text" 
                  id="name" 
                  name="name" 
                  class="form-control-plaintext" 
                  placeholder="Enter User Name"
                  value="{{user_name}}"
                  required>
          </div>
        </div>

         <div class="form-group row">
          <label class="col-sm-4 col-form-label" for="email">Email</label>
          <div class="col-sm-8">
            <input type="email" 
                  id="email" 
                  name="email" 
                  class="form-control-plaintext" 
                  placeholder="Enter Email"
                  value="{{email}}"
                  required>
          </div>
         </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label" for="password">Password</label>
          <div class="col-sm-8">
            <input type="password" 
                  id="password" 
                  name="password" 
                  class="form-control-plaintext" 
                  placeholder="Enter Password"
                  required>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-4 col-form-label" for="confirmPassword">Confirm Password</label>
          <div class="col-sm-8">
            <input type="password" 
                  id="confirmPassword" 
                  name="confirmPassword" 
                  class="form-control-plaintext" 
                  placeholder="Enter Password"
                  required>
          </div>
        </div>


        <button type="submit" class="btn btn-primary btn-block">Register</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Register with facebook</a>

      </form>
      <p class="lead mt-4">
        Already Have an Account? <a href="/users/login">User Login</a>
      </p>
    </div>
  </div>
</div>